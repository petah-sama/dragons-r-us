<%= simple_form_for @dragon do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :age %>
  <%= f.input :price_per_day %>
  <%= f.select :difficulty,[['Easy',1], ['Medium', 2], ['Difficult',3]] %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', root_path, class: "btn btn-primary"%>
