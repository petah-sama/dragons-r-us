<div class="container-dragons">
  <h1>Dragons' Lair</h1>
  <% @dragons.each do |dragon| %>
    <div class="card-dragon">
      <img src="https://i.pinimg.com/originals/7d/d2/59/7dd259143b5aa431d457593ad991bc83.jpg" />
      <div class="dragon-info">
        <h2> <%=dragon.name %> </h2>
          <ul>
            <li>Age: <%=dragon.age %></li>
            <li>Category: <%=dragon.category %></li>
            <li>Difficulty: <%=dragon.difficulty %></li>
            <li>Price/day: <%=dragon.price_per_day %></li>
          </ul>
        <div class="countdown">Countdown:</div>
      </div>
    </div>
  <% end %>
</div>


