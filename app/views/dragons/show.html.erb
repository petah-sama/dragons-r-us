<div class="container-show">
  <div class="dragon">
    <div class="dragon-image">
      <% if @dragon.photo.attached? %>
        <%= cl_image_tag @dragon.photo.key, height: 550, width: 350, crop: :fill %>
      <% else %>
        <%= cl_image_tag 'nvou98k9mzayc2m57bm1', height: 550, width: 350, crop: :fill %>
      <% end %>
    </div>
    <div class="dragon-info">
      <h1>Details for <%= @dragon.name %></h1>
      <ul class="icons">
          <div>
            <li>Age: <%=@dragon.age %> years</li>
            <div class="breeder-category">
              <li><i class="fas fa-magic"></i> <%= @dragon.user.first_name %> <%= @dragon.user.last_name %></li>
              <li><i class="fas fa-dragon"></i> <%=@dragon.category %></li>
            </div>
            <div class="difficulty">
              <li>Difficulty: <% @dragon.difficulty.times do %> <i class="fas fa-meteor"></i> <% end %> </li>
            </div>
          </div>
          <div class="price">
            <p> â‚¬ <%=@dragon.price_per_day %> / day</p>
          </div>
      </ul>

      <div class="booking-info">
        <div class="booking-pick">
          <% if @dragon.user == current_user %>
            <%= render partial: 'bookings/list' %>
          <% elsif current_user %>
            <%= render partial: 'bookings/new' %>
          <% end %>
        </div>

        <div class="booking-calendar">
          <%= render partial: 'bookings/calendar' %>
        </div>
      </div>

      <% if policy(@dragon).edit? %>
        <%= link_to 'Edit', edit_dragon_path(@dragon) %>
      <% end %>

      <% if policy(@dragon).edit? %>
        <%= link_to 'Delete', @dragon, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>

    </div>
  </div>
  <div class="back">
  <%= link_to 'Back', dragons_path, class: "btn btn-warning"%>
 </div>
</div>

