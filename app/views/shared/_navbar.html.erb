<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex flex-row-reverse">

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">

        <% if current_user %>
          <div class="dropdown-toggle text-simple" id="navbarDropdown" data-toggle="dropdown" data-toggle="" aria-haspopup="true" aria-expanded="false">
            <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar ml-2" %>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Register", new_user_registration_path, class: 'link-simple' %>
          <%= link_to "Login", user_session_path, class: 'link-simple' %>
        <% end %>

        <% if user_signed_in? %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit profile", edit_user_registration_path, class: 'dropdown-item' %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
          </div>
        <% end %>

      </li>
    </ul>
  </div>
</div>
