
  <div class="dragons-navbar row">

    <div class="col-8">
      <div class="d-flex">
        <% if action_name != 'home' %>
          <%= form_tag dragons_path, method: :get, class: 'form-inline mr-auto ml-auto search-bar' do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              style: "width: 500px",
              placeholder: "Search the perfect dragon for you ðŸ”¥"
            %>
            <%= submit_tag "Search", class: "btn btn-outline-dark search-button" %>
          <% end %>
        <% end %>
      </div>

    </div>

    <div class="col-4 text-right">
      <div class="dropdown user-dropdown">

        <% if current_user %>
          <div class="dropdown-toggle text-simple" id="navbarDropdown" data-toggle="dropdown" data-toggle="" aria-haspopup="true" aria-expanded="false">
            <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar ml-2" %>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Register", new_user_registration_path, class: 'link-simple' %>
          <%= link_to "Login", user_session_path, class: 'link-simple' %>
        <% end %>

        <% if user_signed_in? %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit profile", edit_user_registration_path, class: 'dropdown-item' %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
